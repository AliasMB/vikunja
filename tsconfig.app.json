{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM", "WebWorker"],

    "importHelpers": true,
    "sourceMap": true,
    "strictNullChecks": true,
    
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0"
  },
  "vueCompilerOptions": {
    // "strictTemplates": true
    "jsxTemplates": true
  }
}